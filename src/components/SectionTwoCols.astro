---
// src/components/TwoColumnSection.astro
type Props = {
  title?: string;
  as?: "section" | "article";
  leftClass?: string;
  rightClass?: string;
  containerClass?: string;
};

const {
  title,
  as = "section",
  leftClass = "",
  rightClass = "",
  containerClass = "",
} = Astro.props as Props;

const Tag = as;
---

<Tag class={`w-full ${containerClass}`}>
  {title && (
    <header class="w-full px-4 sm:px-6 lg:px-10 py-8">
      <h2 class="text-2xl font-semibold text-gray-900">{title}</h2>
    </header>
  )}

  <div class="grid w-full gap-6 px-4 sm:px-6 lg:px-10 pb-10 md:grid-cols-[50%_50%]">
    <aside class={`rounded-2xl border border-gray-200 bg-white p-6 ${leftClass}`}>
      <slot name="left" />
    </aside>

    <main class={`rounded-2xl border border-gray-200 bg-white p-6 ${rightClass}`}>
      <slot name="right" />
    </main>
  </div>
</Tag>
