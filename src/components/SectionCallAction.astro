---
const {title, paragraph, button1, button2} = Astro.props;
---

<div class="relative overflow-hidden bg-gray-50">
  <div aria-hidden="true" class="hidden sm:absolute sm:inset-y-0 sm:block sm:size-full">
  </div>

    <main class="mx-auto mt-16 max-w-7xl px-4 sm:mt-24">
      <div class="text-center">
        <h2 class="text-4xl font-semibold tracking-tight text-balance text-[#3C788C] sm:text-5xl">
          {title}
        </h2>
        <p class="mx-auto mt-3 max-w-md text-base text-gray-500 sm:text-lg md:mt-5 md:max-w-3xl md:text-xl">{paragraph}</p>
        <div class="mx-auto mt-5 max-w-md sm:flex sm:justify-center md:mt-8">
          <div class="rounded-md shadow-sm">
            <a href="#" class="flex w-full items-center justify-center rounded-md border border-transparent bg-[#014650] px-8 py-3 text-base font-medium text-white hover:bg-[#014650] md:px-10 md:py-4 md:text-lg">{button1}</a>
          </div>
          <div class="mt-3 rounded-md shadow-sm sm:mt-0 sm:ml-3">
            <a href="#" class="flex w-full items-center justify-center rounded-md border border-transparent bg-white px-8 py-3 text-base font-medium text-[#014650] hover:bg-[#014650] md:px-10 md:py-4 md:text-lg">{button2}</a>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
